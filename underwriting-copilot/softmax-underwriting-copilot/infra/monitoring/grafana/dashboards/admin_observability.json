{
  "id": null,
  "uid": "admin-observability",
  "title": "Operator Observability",
  "tags": ["admin", "underwriting"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Queue Backlog",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "datasource": {"type": "prometheus", "uid": "prometheus_ds"},
      "targets": [
        {
          "refId": "A",
          "expr": "sum(queue_backlog)",
          "legendFormat": "{{queue}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Job Throughput by Tenant",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "datasource": {"type": "prometheus", "uid": "prometheus_ds"},
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(underwriting_jobs_created_total[5m])) by (tenant_id)",
          "legendFormat": "{{tenant_id}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "API Error Rate by Tenant",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "datasource": {"type": "prometheus", "uid": "prometheus_ds"},
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_request_errors_total[5m])) by (tenant_id)",
          "legendFormat": "{{tenant_id}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "min": 0
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Worker Failures",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "datasource": {"type": "prometheus", "uid": "prometheus_ds"},
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(underwriting_jobs_failed_total[5m])) by (tenant_id)",
          "legendFormat": "{{tenant_id}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "min": 0
        },
        "overrides": []
      }
    }
  ]
}
